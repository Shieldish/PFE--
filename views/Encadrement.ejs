<script>
  // Function to set the active tab
  function setActiveTab(tabId) {
    // Remove 'active' class from all tab links and tab panes
    document.querySelectorAll('.nav-link').forEach(function(link) {
      link.classList.remove('active');
    });
    document.querySelectorAll('.tab-pane').forEach(function(pane) {
      pane.classList.remove('show', 'active');
    });
    // Add 'active' class to the selected tab link and tab pane
    document.querySelector('#' + tabId + '-tab').classList.add('active');
    document.querySelector('#' + tabId).classList.add('show', 'active');
    // Store the active tab ID in local storage
    localStorage.setItem('activeTab', tabId);
  }

  // Function to get the active tab from local storage
  function getActiveTab() {
    return localStorage.getItem('activeTab') || 'nav-home'; // Default to 'nav-home' if no tab is stored
  }

  // Set the active tab when the page loads
  window.addEventListener('DOMContentLoaded', function() {
    setActiveTab(getActiveTab());
  });

  // Event listener to save the active tab when a tab is clicked
  document.querySelectorAll('.nav-link').forEach(function(link) {
    link.addEventListener('click', function(event) {
      setActiveTab(event.target.getAttribute('aria-controls'));
    });
  });
</script>


