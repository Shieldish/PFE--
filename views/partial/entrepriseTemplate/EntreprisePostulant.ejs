.btn-outline-primary {
  color: #3498db;
  border-color: #3498db;
}

.btn-outline-primary:hover {
  background-color: #3498db;
  color: #ffffff;
}

.btn-outline-dark {
  color: #2c3e50;
  border-color: #2c3e50;
